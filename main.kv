<addEventoWid>:
    orientation: 'vertical'
    padding: 5
    spacing: 5    
    canvas:
        Color:
            rgb: 0.2,0.66,0.64
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        source:"img/Registro.png"
        size_hint_y: 3
        allow_stretch: True
    LeftLabel: # ---------- Nombre
        #text: ' Nombre:'
    TextInput:
        id: ti_nombreEV
        multiline: False
        hint_text: 'Nombre *'
    LeftLabel: # ---------- Lugar
        #text: ' Lugar:'
    TextInput:
        id: ti_Lugar
        multiline: False
        hint_text: 'Lugar*'
    LeftLabel: # ---------- Fecha:
        #text: ' Fecha:'
    TextInput:
        id: ti_fecha
        multiline: False
        hint_text: 'dd/mm/aa*'
    LeftLabel: # ---------- Especie:
        #text: ' Especie:'
    TextInput:
        id: ti_fecha
        multiline: False
        hint_text: 'Especie'        

    BoxLayout:
        size_hint_y: 3
    BoxLayout: # ---------- Crear Salir
        Button:
            text: 'Agregar'
            #on_press: root.Eventos()    
        Button:
            text: 'Salir'
            on_press: root.m_INICIO()  

