    orientation: 'vertical'
    padding: 15
    spacing: 15
    canvas:
        Color:
            rgb: .7,.2,.3        #168,50,70 (rojo)  se dividen por 255
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint_y: .05
    Button:
        size_hint_y: .25
        background_normal : 'img/addEvent.png' #Agregar evento
        on_press: root.add_Evento()

    BoxLayout:
        size_hint_y: .05       
    Button:
        size_hint_y: .25
        background_normal : 'img/Consulta.png' #Consultar
        on_press: root.consulta()

    BoxLayout:
        size_hint_y: .05       
